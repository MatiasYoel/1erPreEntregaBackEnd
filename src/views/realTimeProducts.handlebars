<div class="d-flex justify-content-center mb-5">
    <form class="row g-3 mx-4 mt-4 bg-primary text-bg-primary" style="max-width: 700px" id="form">
    <div class="col-md-4 text-center --bs-white">
        <label for="" class="form-label text-center">
            Titulo:
        </label>
        <input name="title" type="text" class="form-control" id="" required>
    </div>
    <div class="col-md-4 text-center">
        <label for="" class="form-label">
            Descripcion:
        </label>
        <input name="description" type="text" class="form-control" id="" required>
    </div>
    <div class="col-md-4 text-center">
        <label for="" class="form-label">
            Precio:
        </label>
        <input name="price" type="number" class="form-control" id="" required>
    </div>
    <div class="col-md-4 text-center">
        <label for="" class="form-label">
            Codigo:
        </label>
        <input name="code" type="text" class="form-control" id="" required>
    </div>
    <div class="col-md-4 text-center">
        <label for="" class="form-label">
            Stock:
        </label>
        <input name="stock" type="number" class="form-control" id="" required>
    </div>
    <div class="col-md-4 text-center">
        <label for="" class="form-label">
            Categoria:
        </label>
        <input name="category" type="text" class="form-control" id="" required>
    </div>
    <div class="col-md-4" >
        <label for="" class="form-label">
            Thumbnails:
        </label>
        <input name="thumbnails" type="file" class="form-control" id="">
    </div>
    <div class="form-check mx-4">
        <input name="status" class="form-check-input bg-success" type="checkbox" value="true" id="flexCheckChecked" checked="">
        <label class="form-check-label " for="flexCheckChecked">
            Status
        </label>
    </div>
    <div class="col-12 d-flex justify-content-center">
        <button class="btn btn-secondary " type="submit">Enviar producto</button>
    </div>
</form>
</div>


<div class="row mt-4" id="products">

</div>


<script src="/socket.io/socket.io.js"></script>
